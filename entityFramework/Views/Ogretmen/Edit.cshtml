@model Ogretmen

<h2>Öğretmen Güncelleme</h2>
<hr />
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OgretmenId"/>
    <label asp-for="OgretemenAd" class="form-label">Öğretmen Adı</label>
    <input asp-for="OgretemenAd" class="form-control" />

    <label asp-for="OgretemenSoyad" class="form-label">Öğretmen Soyadı</label>
    <input asp-for="OgretemenSoyad" class="form-control" />

    <label asp-for="Eposta" class="form-label">Eposta</label>
    <input asp-for="Eposta" class="form-control" />

    <label asp-for="Telefon" class="form-label">Telefon</label>
    <input asp-for="Telefon" class="form-control" />

    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>

