@model IEnumerable<Ogretmen>
<h2>Ogretmenler</h2>
<hr />
<a asp-action="Create" class="btn btn-primary">Ögretmen Kaydet</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.OgretmenId)</th>
            <th>@Html.DisplayNameFor(x => x.OgretemenAd)</th>
            <th>@Html.DisplayNameFor(x => x.OgretemenSoyad)</th>
            <th>@Html.DisplayNameFor(x => x.Eposta)</th>
            <th>@Html.DisplayNameFor(x => x.Telefon)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.OgretmenId</th>
                <th>@Html.DisplayFor(modelItem => item.OgretemenAd)</th>
                <th>@Html.DisplayFor(modelItem => item.OgretemenSoyad)</th>
                <th>@Html.DisplayFor(modelItem => item.Eposta)</th>
                <th>@Html.DisplayFor(modelItem => item.Telefon)</th>
                <th>
                    <a asp-action="Edit" asp-route-id="@item.OgretmenId" class="btn btn-primary">Edit</a>
                    <a asp-action ="Delete" asp-route-id="@item.OgretmenId" class="btn btn-danger">Delete</a>

                </th>
            </tr>
        }
    </tbody>
</table>
