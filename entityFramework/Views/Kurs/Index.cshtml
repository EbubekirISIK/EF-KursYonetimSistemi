@model IEnumerable<Kurs>
<h2>Kurslar Listesi</h2>
<hr />
<a asp-action="Create" class="btn btn-primary">Kurs Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px">id</th>
            <th>Başlık</th>
            <th style="width: 150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kurs in Model)
        {
            <tr>

                <th>@kurs.KursId</th>
                <th>@kurs.Baslik</th>
                <th>
                    <a asp-action="Edit" asp-route-id="@kurs.KursId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@kurs.KursId" class="btn btn-danger">Delete</a>
                </th>

            </tr>
        }
    </tbody>
</table>
