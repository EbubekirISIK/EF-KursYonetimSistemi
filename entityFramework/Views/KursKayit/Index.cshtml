@model IEnumerable<KursKayit>

<table class="table table-bordered">
    <thead>
        <tr>
            <td style="width: 150px">@Html.DisplayNameFor(x => x.KayitId)</td>
            <td>@Html.DisplayNameFor(x => x.Ogrenci.AdSoyad)</td>
            <td>@Html.DisplayNameFor(x => x.Kurs.Baslik)</td>
            <td>@Html.DisplayNameFor(x => x.Ogretmen.AdSoyad)</td>

            <td style="width: 150px"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KayitId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ogrenci.AdSoyad)</td>
                <td>@(item.Ogretmen != null ? item.Ogretmen.AdSoyad : "Öğretmen Yok")</td>


                <td>@Html.DisplayFor(modelItem => item.Kurs.Baslik)</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.KayitId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.KayitId" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }


    </tbody>
</table>